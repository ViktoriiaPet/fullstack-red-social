#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running ESLint in frontend..."
npm --prefix proyecto-final/frontend run lint -- --fix --max-warnings=0
frontend_exit=$?

echo "Running ESLint in backend..."
npm --prefix proyecto-final/backend run lint -- --fix --max-warnings=0
backend_exit=$?

if [ $frontend_exit -ne 0 ] || [ $backend_exit -ne 0 ]; then
  echo ""
  echo "ESLint found remaining errors. Please fix them before pushing."
  exit 1
fi

echo ""
echo "All linters passed. Proceeding with push."
exit 0